<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UIControls.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="multi-line input"/>
            <Editor Placeholder="Please enter text here" AutoSize="TextChanges"/>

            <Label Text="sample image"/>
            <Image Source="dotnet_bot.png" HeightRequest="100" WidthRequest="100"/>

            <HorizontalStackLayout>
                <CheckBox x:Name="checkAgree"/>
                <Label Text="I agree to terms" VerticalOptions="Center"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
