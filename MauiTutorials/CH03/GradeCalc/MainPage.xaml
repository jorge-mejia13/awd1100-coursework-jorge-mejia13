<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GradeCalc.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Number Grade:"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1" />
            <Entry x:Name="txtNumberGrade"
                   Text=""/>
            <Button x:Name="btnSubmit"
                    Text="Calculate"
                    SemanticProperties.Hint="Calculate your letter grade"
                    Clicked="OnCalculate"
                    HorizontalOptions="Fill" />
            <Label x:Name="lblLetterGrade"
                   Text="Letter Grade"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
